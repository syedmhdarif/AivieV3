<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/musicaudio"
    android:background="@color/grey"
    tools:context=".Activity_music">

    <RelativeLayout
        android:id="@+id/headerpart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/goback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:drawableLeft="@drawable/ic_save"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/camera_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerpart"
        app:layout_constraintVertical_bias="0.10">

        <RelativeLayout
            android:id="@+id/videoview1"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp">

            <VideoView
                android:id="@+id/video_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="65dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="0dp"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeinterval"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/videoview1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/time1"
                android:text="0:15"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/time2"
                android:text="0:30"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/time3"
                android:text="0:45"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/time4"
                android:text="1:00"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/editprogress"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/timeinterval"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/videoview1"
            android:background="@drawable/editprogress">

            <ImageButton
                android:id="@+id/endadjust"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/segmentaddvideo"
                android:src="@drawable/ic_lineprogressbar"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


            <ImageButton
                android:id="@+id/startadjust"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/segmentaddvideo"
                android:src="@drawable/ic_lineprogressbar"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <SeekBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editmusic"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/editprogress"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/editprogress">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="adele - When we were young"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/basicedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="30dp">

            <HorizontalScrollView
                android:id="@+id/horizontalscroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@+id/basicedit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/basicedit">

                <RelativeLayout
                    android:id="@+id/horizontalscroll1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:id="@+id/Bgmatting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/backgroundmatting"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:onClick="buttonPopupWindow"
                            android:padding="7dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_music_add"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                            tools:layout_editor_absoluteY="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/backgroundmatting"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"

                            android:text="Add online"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/Bgmatting"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteY="0dp">

                        <ImageButton
                            android:id="@+id/editText1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_music_upload"
                            android:onClick="buttonPopupWindow2"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                            tools:layout_editor_absoluteY="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editText1"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="-3dp"
                            android:text="Add local"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/editSticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/editText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteY="0dp">

                        <ImageButton
                            android:id="@+id/editSticker1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_effect"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                            tools:layout_editor_absoluteY="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editSticker1"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="-3dp"
                            android:text="Stciker"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/editAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/editSticker"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteY="0dp">

                        <ImageButton
                            android:id="@+id/editAudio1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="9dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_record"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                            tools:layout_editor_absoluteY="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editAudio1"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="-3dp"
                            android:text="Audio"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </RelativeLayout>

            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>