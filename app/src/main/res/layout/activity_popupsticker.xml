<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Popupmusic"
    android:background="@drawable/music_popup"
    android:id="@+id/mainpopup">

    <ScrollView
        android:id="@+id/musicscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <RelativeLayout
            android:id="@+id/popupmusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/stickers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Stickers"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/stickerview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stickers"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/sticker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="26dp"

                        android:src="@drawable/bell" />

                    <ImageView
                        android:id="@+id/sticker2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/sticker1"
                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/sticker3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/sticker2"
                        android:src="@drawable/snow" />

                    <ImageView
                        android:id="@+id/sticker4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/sticker3"
                        android:src="@drawable/house2" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1">

                    <ImageView
                        android:id="@+id/ssticker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="26dp"

                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/ssticker2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/ssticker1"
                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/ssticker3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/ssticker2"
                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/ssticker4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/ssticker3"
                        android:src="@drawable/house" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2">

                    <ImageView
                        android:id="@+id/msticker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="26dp"

                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/msticker2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/msticker1"
                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/msticker3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/msticker2"
                        android:src="@drawable/house" />

                    <ImageView
                        android:id="@+id/msticker4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="26dp"
                        android:layout_toEndOf="@+id/msticker3"
                        android:src="@drawable/house" />


                </RelativeLayout>


            </RelativeLayout>







        </RelativeLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>