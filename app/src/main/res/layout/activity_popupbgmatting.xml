<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_popupbgmatting"
    android:background="@drawable/music_popup"
    android:id="@+id/popupbgmatting">

    <TextView
        android:id="@+id/textbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your theme"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/mainscene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbg"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:id="@+id/mainscene1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/mscene1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp">

                <ImageView
                    android:id="@+id/scene1"
                    android:layout_width="100dp"
                    android:layout_height="130dp"

                    android:background="@drawable/segmentaddvideo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene1"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="@color/pink"
                    android:text="Original"
                    android:textAlignment="center" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mscene2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/mscene1">

                <ImageView
                    android:id="@+id/scene2"
                    android:layout_width="100dp"
                    android:layout_height="130dp"

                    android:background="@drawable/segmentaddvideo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene2"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Futuristic"
                    android:textAlignment="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mscene3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/mscene2">

                <ImageView
                    android:id="@+id/scene3"
                    android:layout_width="100dp"
                    android:layout_height="130dp"

                    android:background="@drawable/segmentaddvideo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene3"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Classic"
                    android:textAlignment="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mscene4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/mscene3">

                <ImageView
                    android:id="@+id/scene4"
                    android:layout_width="100dp"
                    android:layout_height="130dp"

                    android:background="@drawable/segmentaddvideo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene4"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Modern"
                    android:textAlignment="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mscene5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/mscene4">

                <ImageView
                    android:id="@+id/scene5"
                    android:layout_width="100dp"
                    android:layout_height="130dp"

                    android:background="@drawable/segmentaddvideo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scene5"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Cinematic"
                    android:textAlignment="center" />

            </RelativeLayout>


        </RelativeLayout>


    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>